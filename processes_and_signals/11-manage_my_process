#!/usr/bin/env bash
#Task
PIDFILE=/var/run/my_process.pid
case "$1" in
  start)
    ./manage_my_process &
    echo $! > "$PIDFILE"
    echo "manage_my_process started"
    ;;
  stop)
    if [ -f "$PIDFILE" ]; then
      PID=$(cat "$PIDFILE")
      if kill "$PID" 2>/dev/null; then
        rm -f "$PIDFILE"
      fi
    fi
    echo "manage_my_process stopped"
    ;;
  restart)
    if [ -f "$PIDFILE" ]; then
      PID=$(cat "$PIDFILE")
      kill "$PID" 2>/dev/null
      rm -f "$PIDFILE"
    fi
    ./manage_my_process &
    echo $! > "$PIDFILE"
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
